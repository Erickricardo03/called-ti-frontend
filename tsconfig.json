{
  "compileOnSave": false,
  "compilerOptions": {    
    "strict": true,
     "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "ES2022",
    "moduleResolution": "Node",
   
    "importHelpers": true,
    "target": "ES2022",
    
    "lib": [
      "ES2022",
      "DOM"
    ],
    "forceConsistentCasingInFileNames": true
    
  }
}
